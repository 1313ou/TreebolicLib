<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/TreebolicDialogTheme"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:padding="5dp">

	<TextView
		android:id="@+id/header"
		style="@style/TreebolicDialogTheme"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:contentDescription="@string/desc_content_header"
		android:drawableStart="@drawable/status_info"
		android:drawableLeft="@drawable/status_info"
		android:drawablePadding="10dp"
		android:textColor="?attr/treebolic_dialog_foreground_enhanced"
		android:textSize="20sp"/>

	<WebView
		android:id="@+id/content"
		style="@style/TreebolicDialogTheme"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:contentDescription="@string/desc_content"/>

</LinearLayout>